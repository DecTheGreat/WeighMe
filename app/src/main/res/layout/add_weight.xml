<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"

>


    <ScrollView
            android:layout_width="406dp"
            android:layout_height="620dp" tools:layout_editor_absoluteY="50dp" tools:layout_editor_absoluteX="-3dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="ADD WEIGHT"
                    android:id="@+id/add_weight_title"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:background="@drawable/button"
            />
            <TextView
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:background="@drawable/button"
            />
            <EditText
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Please Enter your Weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_weight"
                    android:layout_margin="10dp"
                    android:inputType="text"
                    android:background="@drawable/button"
            />
            <TextView
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
            />
            <TextView

                    android:layout_marginTop="20dp"
                    android:text="Please Enter the Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_weight_date"
                    android:layout_margin="10dp"
                    tools:ignore="MissingConstraints"
                    android:padding="20dp"
                    android:background="@drawable/button"
            />
            <Button
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:text="Save Data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="100dp"
                    android:gravity="center"
                    android:id="@+id/save_button"
            />
        </LinearLayout>
    </ScrollView>
    <HorizontalScrollView
            android:layout_width="409dp"
            android:layout_height="107dp"
            tools:layout_editor_absoluteY="604dp"
            tools:layout_editor_absoluteX="-18dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
        >
            <Button
                    android:text="Home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/home"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="20dp"
                    android:background="@drawable/button"
            />
            <Button
                    android:text="History"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/history"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="20dp"
                    android:background="@drawable/button"
            />
            <Button
                    android:text="Add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/add"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="20dp"
                    android:background="@drawable/button"
            />
        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>